---
import '../styles/project.css'
const { title, description, link, cover, tags } = Astro.props
---

<div class="project-card">
  <a href={link} target="_blank">
    <img src={cover} />
  </a>
  <div>
    <h4>
      <a href={link} target="_blank">
        {title}
      </a>
    </h4>
    <p>{description}</p>
    <div>
      {tags.map((tag) => (<span>{tag}</span>))}
    </div>
  </div>
</div>
