---
export interface Props {
  title: string;
  description: string;
  link: string;
  cover: string;
  tags: string[];
}

const { title, description, link, cover, tags } = Astro.props as Props;
---

<div class="bg-zinc-800 mb-8">
  <a href={link} target="_blank">
    <img src={cover} />
  </a>
  <div class="p-4">
    <h4 class="font-medium hover:underline">
      <a href={link} target="_blank">
        {title}
      </a>
    </h4>
    <p class="text-zinc-400 text-sm">{description}</p>
    <div class="mt-4">
      {tags.map((tag) => (<span class="text-white mr-2 cursor-pointer transition hover:text-blue-500">#{tag}</span>))}
    </div>
  </div>
</div>
